<div class="field">
  <%= form_with(model: @user, local: true, url: choose_new_or_edit) do |f| %>  
    <%= f.label :"new icon" %>
    <%= image_tag(user.profile_image.icon.url) if user.profile_image && user.profile_image.url %>
    <%= f.file_field :profile_image %>
    <%= f.hidden_field :profile_image_cache %>

    <%= f.label :"new name" %>
    <%= f.text_field :name %>

    <%= f.label :"new email" %>
    <%= f.email_field :email %>

    <%= f.label :"new password" %>
    <%= f.password_field :password %>

    <%= f.label :"new password_confirmation" %>
    <%= f.password_field :password_confirmation %>

    <% if @user.id.present? %>
      <%= f.submit :"Could you edit it?" %>
    <% else %>
      <%= f.submit "Create my account" %>
    <% end %>
  <% end %>
</div>
