<%= form_with(model: @picture, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @picture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Please select image %>
    <%= image_tag(picture.image.thumb.url) if picture.image && picture.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    <br>
    <br>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <br>
  <% if @picture.id.present? %>
    <%= form.submit :Could you edit? %>
  <% else %>
    <%= form.submit :Go post! %>
  <% end %>
  <br>
<% end %>
